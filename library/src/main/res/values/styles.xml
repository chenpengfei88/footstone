<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否浮在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:backgroundDimEnabled"> <!-- 设置阴影浮动框 -->
            true
        </item>
        <!-- 模糊 -->
        <item name="android:windowFrame">
            @null
        </item>
    </style>

    <!-- dialog动画 -->
    <style name="dialog_animation_bottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <style name="dialog_animation_right" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_right_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_right_out</item>
    </style>

    <style name="dialog_animation_left" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_left_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_left_out</item>
    </style>

    <style name="dialog_animation_alpha" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_alpha_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_alpha_out</item>
    </style>

</resources>